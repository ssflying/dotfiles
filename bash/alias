# vim: ft=sh
# ls hacks
alias ls='ls --color=auto --group-directories-first'
alias la='ls -a' # List All
alias ll='ls -l' # Long Listing

# Some more alias to avoid making mistakes:
alias rm='rm -i'
alias mv='mv -i'

# for convenient and eye candy
alias less='less -X'
alias more='less'

# edit alias
alias vi='vim'
alias vib='vi ~/.bashrc && . ~/.bashrc'
alias viv='vi ~/.vimrc'

# application alias
alias wcpe='mplayer http://audio-ogg.ibiblio.org:8000/wcpe.ogg'
alias rescreen='screen -D -R'
alias rebdwm='pushd ~/tarball/dwm-6.0 && vi config.h && sudo make clean install && popd'
